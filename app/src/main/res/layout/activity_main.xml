<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/Fondo">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLeer" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:hint="Escribe una frase"/>
    <Button
            android:text="Leer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLeer" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/etLeer"/>
</android.support.constraint.ConstraintLayout>